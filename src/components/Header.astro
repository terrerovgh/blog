<style>
  .header {
    border-bottom: 1px solid var(--border);
  }

  .nav {
    max-width: 680px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
  }

  .logo {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-bright);
    letter-spacing: -0.01em;
  }

  .logo:hover { text-decoration: none; opacity: 0.8; }

  .sep { color: var(--muted); margin: 0 0.1rem; font-weight: 400; }

  .links {
    display: flex;
    gap: 1.5rem;
  }

  .links a {
    font-size: 0.8rem;
    color: var(--muted);
  }

  .links a:hover {
    color: var(--text-bright);
    text-decoration: none;
  }

  @media (max-width: 480px) {
    .nav { padding: 1rem; }
    .links { gap: 1rem; }
  }
</style>
