---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <nav class="nav">
    <a href="/" class="logo-container">
      <div class="logo-ring">
        <img src="/logo.png" alt="Surviving Chernarus Logo" class="logo-img" />
      </div>
      <div class="logo-text-group">
        <span class="logo-text">SURVIVING</span>
        <span class="logo-accent">CHERNARUS</span>
      </div>
    </a>
    <div class="nav-links">
      <a href="/" class="nav-link" data-text="Intel">
        <span class="nav-link-inner">Intel</span>
        <span class="nav-link-glitch"></span>
      </a>
      <a href="/about" class="nav-link" data-text="Survivor">
        <span class="nav-link-inner">Survivor</span>
        <span class="nav-link-glitch"></span>
      </a>
      <a href="/rss.xml" class="nav-link" data-text="Comms">
        <span class="nav-link-inner">Comms</span>
        <span class="nav-link-glitch"></span>
      </a>
    </div>
    <div class="status-indicator">
      <span class="status-dot"></span>
      <span class="status-text">ONLINE</span>
    </div>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(10, 10, 12, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(196, 77, 45, 0.2);
    overflow: hidden;
  }

  .nav {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    position: relative;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .logo-container:hover {
    transform: scale(1.02);
  }

  .logo-container:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .logo-ring {
    position: relative;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    background: transparent;
    transform: none;
  }

  .logo-text-group {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .logo-text {
    color: #fff;
    font-family: var(--font-heading);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    line-height: 1;
  }

  .logo-accent {
    color: var(--color-accent);
    font-family: var(--font-heading);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.4em;
    line-height: 1;
    text-shadow: 0 0 10px var(--color-accent-glow);
  }

  .nav-links {
    display: flex;
    gap: 0.5rem;
  }

  .nav-link {
    position: relative;
    font-family: var(--font-heading);
    color: var(--color-muted);
    text-decoration: none;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    padding: 0.6rem 1rem;
    border: 1px solid transparent;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .nav-link-inner {
    position: relative;
    z-index: 2;
  }

  .nav-link-glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(196, 77, 45, 0.1), transparent);
    transform: translateX(-100%);
    transition: transform 0.4s ease;
  }

  .nav-link:hover {
    color: #fff;
    border-color: rgba(196, 77, 45, 0.3);
    background: rgba(196, 77, 45, 0.05);
  }

  .nav-link:hover .nav-link-glitch {
    transform: translateX(100%);
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    background: rgba(0, 255, 100, 0.05);
    border: 1px solid rgba(0, 255, 100, 0.2);
    border-radius: 2px;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #00ff64;
    box-shadow: 0 0 8px #00ff64;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  .status-text {
    font-family: var(--font-heading);
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #00ff64;
  }

  @media (max-width: 768px) {
    .nav { padding: 0.8rem 1rem; }
    .logo-text-group { display: none; }
    .nav-links { gap: 0.25rem; }
    .nav-link { padding: 0.5rem 0.7rem; font-size: 0.65rem; }
    .status-indicator { display: none; }
  }

  @media (max-width: 480px) {
    .logo-ring { width: 44px; height: 44px; }
  }
</style>
