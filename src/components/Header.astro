---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="header">
  <nav class="nav">
    <a href="/" class="logo">TERREROV</a>
    <div class="nav-links">
      <a href="/" class="nav-link">Blog</a>
      <a href="/about" class="nav-link">About</a>
      <a href="/rss.xml" class="nav-link">RSS</a>
    </div>
  </nav>
</header>

<style>
  .header {
    background: #1a1a1a;
    border-bottom: 1px solid #ff6b35;
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    color: #ff6b35;
    font-size: 1.5rem;
    font-weight: 900;
    text-decoration: none;
    letter-spacing: 0.2em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: #e0e0e0;
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #ff6b35;
  }
</style>
