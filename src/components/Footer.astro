---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-scan"></div>
  <div class="footer-content">
    <div class="footer-left">
      <div class="footer-brand">
        <span class="brand-text">SURVIVING</span>
        <span class="brand-accent">CHERNARUS</span>
      </div>
      <p class="copyright">&copy; {currentYear} Terrerov. All transmissions encrypted.</p>
    </div>
    <div class="footer-right">
      <div class="footer-links">
        <a href="/rss.xml" class="footer-link">
          <span class="link-icon">◈</span>
          <span>RSS Feed</span>
        </a>
        <a href="/sitemap-index.xml" class="footer-link">
          <span class="link-icon">◈</span>
          <span>Sitemap</span>
        </a>
      </div>
      <div class="coordinates">
        <span class="coord-label">GRID:</span>
        <span class="coord-value">042.1952, 018.4313</span>
      </div>
    </div>
  </div>
  <div class="footer-border"></div>
</footer>

<style>
  .footer {
    position: relative;
    background: linear-gradient(180deg, transparent 0%, rgba(196, 77, 45, 0.02) 100%);
    padding: 2.5rem 1.5rem;
    margin-top: auto;
    overflow: hidden;
  }

  .footer-scan {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      var(--color-accent) 20%, 
      var(--color-accent) 80%, 
      transparent 100%);
    opacity: 0.5;
  }

  .footer-content {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .brand-text {
    font-family: var(--font-heading);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    color: var(--color-muted);
    text-transform: uppercase;
  }

  .brand-accent {
    font-family: var(--font-heading);
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.4em;
    color: var(--color-accent);
    text-transform: uppercase;
  }

  .copyright {
    font-size: 0.75rem;
    color: var(--color-muted);
    margin: 0;
    opacity: 0.7;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--color-muted);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    transition: all 0.25s ease;
    text-transform: uppercase;
  }

  .footer-link::after {
    display: none;
  }

  .link-icon {
    color: var(--color-accent);
    font-size: 0.6rem;
    transition: transform 0.3s ease;
  }

  .footer-link:hover {
    color: var(--color-text-bright);
  }

  .footer-link:hover .link-icon {
    transform: rotate(90deg);
  }

  .footer-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .coordinates {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    background: rgba(196, 77, 45, 0.05);
    border: 1px solid rgba(196, 77, 45, 0.15);
    border-radius: 2px;
    font-family: var(--font-heading);
  }

  .coord-label {
    font-size: 0.6rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .coord-value {
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    font-variant-numeric: tabular-nums;
  }

  .footer-border {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      var(--color-accent) 50%, 
      transparent 100%);
    opacity: 0.3;
  }

  @media (max-width: 768px) {
    .footer { padding: 2rem 1rem; }
    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }
    .footer-left { align-items: center; }
    .footer-right { align-items: center; }
    .footer-links { gap: 1rem; }
    .coordinates { margin-top: 0.5rem; }
  }

  @media (max-width: 480px) {
    .footer-links { flex-direction: column; gap: 0.75rem; align-items: center; }
    .coord-value { font-size: 0.6rem; }
  }
</style>
