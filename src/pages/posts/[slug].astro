---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post">
    <header class="post-header">
      <time class="date">{formattedDate}</time>
      <h1 class="title">{post.data.title}</h1>
      {post.data.description && <p class="desc">{post.data.description}</p>}
    </header>

    <div class="content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/">&larr; back to posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post { max-width: 100%; }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .date {
    font-size: 0.8rem;
    color: var(--muted);
    font-family: var(--mono);
    display: block;
    margin-bottom: 0.75rem;
  }

  .title {
    font-size: 1.75rem;
    line-height: 1.25;
    margin: 0 0 0.75rem 0;
  }

  .desc {
    color: var(--muted);
    font-size: 1rem;
    margin: 0;
    line-height: 1.5;
  }

  .content { line-height: 1.75; }

  .content :global(h2) {
    font-size: 1.25rem;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .content :global(h3) {
    font-size: 1.05rem;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .content :global(p) {
    margin-bottom: 1.25rem;
    color: var(--text);
  }

  .content :global(strong) {
    color: var(--text-bright);
    font-weight: 600;
  }

  .content :global(code) {
    background: var(--surface);
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    font-size: 0.85em;
    color: var(--text-bright);
    font-family: var(--mono);
  }

  .content :global(pre) {
    background: var(--surface);
    padding: 1.25rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
    font-size: 0.85rem;
    line-height: 1.5;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    font-size: inherit;
  }

  .content :global(blockquote) {
    border-left: 2px solid var(--border);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--muted);
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.25rem;
    color: var(--text);
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(li)::marker {
    color: var(--muted);
  }

  .content :global(hr) {
    border: none;
    height: 1px;
    background: var(--border);
    margin: 2.5rem 0;
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .content :global(th) {
    text-align: left;
    padding: 0.6rem 1rem;
    border-bottom: 1px solid var(--border);
    color: var(--text-bright);
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .content :global(td) {
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--border);
    color: var(--text);
  }

  .content :global(tr:last-child td) {
    border-bottom: none;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .post-footer a {
    font-size: 0.85rem;
    color: var(--muted);
  }

  .post-footer a:hover {
    color: var(--text-bright);
  }

  @media (max-width: 768px) {
    .title { font-size: 1.5rem; }
    .content :global(pre) { padding: 1rem; }
  }
</style>
