---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

const { pubDate } = post.data;
const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post">
    <header class="post-header">
      <div class="transmission-badge">
        <span class="badge-dot"></span>
        <span class="badge-text">INCOMING TRANSMISSION</span>
      </div>
      
      <div class="post-meta-top">
        <div class="meta-item">
          <span class="meta-label">DATE</span>
          <time datetime={pubDate.toISOString()} class="meta-value">{formattedDate}</time>
        </div>
        <span class="meta-divider">//</span>
        <div class="meta-item">
          <span class="meta-label">DURATION</span>
          <span class="meta-value">5 MIN READ</span>
        </div>
        <span class="meta-divider">//</span>
        <div class="meta-item">
          <span class="meta-label">STATUS</span>
          <span class="meta-value status-ok">DECRYPTED</span>
        </div>
      </div>
      
      <h1 class="post-title">{post.data.title}</h1>
      <p class="post-description">{post.data.description}</p>
      
      <div class="header-decoration">
        <div class="deco-line"></div>
        <span class="deco-symbol">◈</span>
        <div class="deco-line"></div>
      </div>
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <div class="footer-divider">
        <div class="divider-line"></div>
        <span class="divider-text">END OF TRANSMISSION</span>
        <div class="divider-line"></div>
      </div>
      <a href="/" class="back-link">
        <span class="back-arrow">←</span>
        <span class="back-text">Return to Base</span>
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 720px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 4rem;
    text-align: center;
    position: relative;
  }

  .transmission-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 1rem;
    background: rgba(0, 255, 100, 0.05);
    border: 1px solid rgba(0, 255, 100, 0.2);
    border-radius: 2px;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #00ff64;
    box-shadow: 0 0 8px #00ff64;
    animation: badgePulse 2s ease-in-out infinite;
  }

  @keyframes badgePulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .badge-text {
    font-family: var(--font-heading);
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #00ff64;
    text-transform: uppercase;
  }

  .post-meta-top {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.75rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .meta-label {
    font-family: var(--font-heading);
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--color-muted);
    text-transform: uppercase;
  }

  .meta-value {
    font-family: var(--font-heading);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    text-transform: uppercase;
  }

  .meta-value.status-ok {
    color: #00ff64;
  }

  .meta-divider {
    color: var(--color-accent);
    opacity: 0.4;
    font-size: 0.7rem;
  }

  .post-title {
    font-size: clamp(2rem, 7vw, 3.5rem);
    margin: 0 auto 1.5rem auto;
    line-height: 1.1;
    letter-spacing: -0.03em;
    max-width: 15ch;
    text-transform: uppercase;
  }

  .post-description {
    color: var(--color-muted);
    font-size: clamp(1rem, 2vw, 1.2rem);
    max-width: 45ch;
    margin: 0 auto 2rem;
    line-height: 1.6;
    font-weight: 400;
  }

  .header-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .deco-line {
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent));
  }

  .deco-line:last-of-type {
    background: linear-gradient(90deg, var(--color-accent), transparent);
  }

  .deco-symbol {
    color: var(--color-accent);
    font-size: 0.7rem;
    opacity: 0.6;
  }

  .post-content {
    color: var(--color-text);
    line-height: 1.8;
  }

  .post-content :global(h2) {
    font-size: 1.5rem;
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(196, 77, 45, 0.2);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .post-content :global(h2)::before {
    content: '◈';
    font-size: 0.6rem;
    color: var(--color-accent);
    opacity: 0.7;
  }

  .post-content :global(h3) {
    font-size: 1.2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.75rem;
    color: var(--color-muted);
  }

  .post-content :global(a) {
    color: var(--color-accent-light);
    text-decoration: underline;
    text-decoration-color: rgba(196, 77, 45, 0.3);
    text-underline-offset: 3px;
    transition: all 0.2s ease;
  }

  .post-content :global(a):hover {
    color: var(--color-text-bright);
    text-decoration-color: var(--color-accent);
  }

  .post-content :global(code) {
    background: rgba(196, 77, 45, 0.08);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-size: 0.85em;
    color: var(--color-accent);
    border: 1px solid rgba(196, 77, 45, 0.15);
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
  }

  .post-content :global(pre) {
    background: rgba(12, 12, 15, 0.9);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 2.5rem 0;
    border: 1px solid rgba(196, 77, 45, 0.15);
    position: relative;
  }

  .post-content :global(pre)::before {
    content: 'CODE';
    position: absolute;
    top: 0;
    right: 0;
    padding: 0.3rem 0.6rem;
    font-family: var(--font-heading);
    font-size: 0.5rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    background: rgba(196, 77, 45, 0.1);
    border-bottom-left-radius: 4px;
  }

  .post-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-text);
  }

  .post-content :global(blockquote) {
    border-left: 2px solid var(--color-accent);
    padding: 1.25rem 0 1.25rem 1.75rem;
    margin: 2.5rem 0;
    color: var(--color-text-bright);
    font-size: 1.1rem;
    font-family: var(--font-heading);
    background: linear-gradient(90deg, rgba(196, 77, 45, 0.05) 0%, transparent 100%);
    position: relative;
  }

  .post-content :global(blockquote)::before {
    content: '"';
    position: absolute;
    top: 0;
    left: 0.5rem;
    font-size: 2rem;
    color: var(--color-accent);
    opacity: 0.3;
    font-family: Georgia, serif;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    color: var(--color-muted);
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
    padding-left: 0.5rem;
  }

  .post-content :global(li)::marker {
    color: var(--color-accent);
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
    margin: 3rem 0;
    opacity: 0.3;
  }

  .post-footer {
    margin-top: 5rem;
    text-align: center;
  }

  .footer-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .divider-line {
    width: 50px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-accent));
    opacity: 0.4;
  }

  .divider-line:last-of-type {
    background: linear-gradient(90deg, var(--color-accent), transparent);
  }

  .divider-text {
    font-family: var(--font-heading);
    font-size: 0.55rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    color: var(--color-accent);
    text-transform: uppercase;
    opacity: 0.6;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: rgba(196, 77, 45, 0.08);
    border: 1px solid rgba(196, 77, 45, 0.25);
    border-radius: 4px;
    font-family: var(--font-heading);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-size: 0.75rem;
    color: var(--color-text-bright);
    transition: all 0.3s ease;
  }

  .back-link::after {
    display: none;
  }

  .back-arrow {
    color: var(--color-accent);
    transition: transform 0.3s ease;
  }

  .back-link:hover {
    background: rgba(196, 77, 45, 0.15);
    border-color: rgba(196, 77, 45, 0.4);
    transform: translateY(-2px);
  }

  .back-link:hover .back-arrow {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .post-header { margin-bottom: 3rem; }
    .post-meta-top { gap: 0.75rem; }
    .meta-divider { display: none; }
    .post-content :global(pre) { padding: 1rem; }
  }

  @media (max-width: 480px) {
    .post-meta-top { flex-direction: column; gap: 0.5rem; }
    .meta-item { flex-direction: row; gap: 0.5rem; }
    .back-link { padding: 0.6rem 1.25rem; font-size: 0.7rem; }
  }
</style>
